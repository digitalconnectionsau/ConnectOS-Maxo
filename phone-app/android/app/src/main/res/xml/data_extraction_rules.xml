<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive data from cloud backup -->
        <exclude domain="sharedpref" path="phone_system_prefs.xml"/>
        <exclude domain="database" />
    </cloud-backup>
    
    <device-transfer>
        <!-- Allow basic app data transfer between devices -->
        <include domain="sharedpref" path="phone_system_prefs.xml"/>
    </device-transfer>
</data-extraction-rules>