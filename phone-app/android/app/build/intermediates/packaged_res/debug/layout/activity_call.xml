<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light"
    android:padding="16dp">

    <!-- Status Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@color/surface"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/tv_call_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/connecting"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary" />

        <TextView
            android:id="@+id/tv_call_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="16sp"
            android:textColor="@color/text_secondary" />
    </LinearLayout>

    <!-- Contact Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_contact_avatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/call_button_background"
            android:src="@drawable/ic_call"
            android:scaleType="centerInside"
            android:padding="24dp" />

        <TextView
            android:id="@+id/tv_contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unknown Contact"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_contact_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+1234567890"
            android:textSize="18sp"
            android:textColor="@color/text_secondary" />
    </LinearLayout>

    <!-- Call Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/btn_mute"
            style="@style/CallButton"
            android:text="@string/mute"
            android:backgroundTint="@color/surface"
            android:textColor="@color/text_primary" />

        <Button
            android:id="@+id/btn_speaker"
            style="@style/CallButton"
            android:text="@string/speaker"
            android:backgroundTint="@color/surface"
            android:textColor="@color/text_primary" />

        <Button
            android:id="@+id/btn_hangup"
            style="@style/CallButton"
            android:text="@string/hang_up"
            android:background="@drawable/hangup_button_background"
            android:drawableTop="@drawable/ic_call_end" />
    </LinearLayout>
</LinearLayout>